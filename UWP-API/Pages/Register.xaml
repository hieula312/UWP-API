<Page
    x:Class="UWP_API.Pages.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_API.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush
                Stretch="UniformToFill"
                ScrollViewer.ZoomMode="Disabled"
                Opacity="0.8"
                ImageSource="/Assets/img/img6.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="3*">
            </RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
             Foreground="#f0a461"
            Padding="0,00,0,0"
            FontSize="60">
            REGISTER
        </TextBlock>
        <Grid
            Grid.Row="1"
            Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="1"
                Orientation="Vertical">
                <TextBox
                    Margin="0,10,0,0"
                    x:Name="fisrtName"
                    FontSize="25"
                    Foreground="DimGray"
                    PlaceholderText="First Name"/>
                <TextBlock
                    x:Name="fisrtNameErr"
                    FontSize="15"
                    Foreground="#f0a461"
                    TextAlignment="Left">
                </TextBlock>
                <TextBox
                    Margin="0,10,0,0"
                    x:Name="lastName"
                    FontSize="25"
                    Foreground="DimGray"
                    PlaceholderText="Last Name"/>
                <TextBlock
                    x:Name="lastNameErr"
                    FontSize="15"
                    Foreground="#f0a461"
                    TextAlignment="Left">
                </TextBlock>
                <TextBox
                    Margin="0,10,0,0"
                    x:Name="email"
					FontSize="25"
					Foreground="DimGray"
                    PlaceholderText="Email"/>
                <TextBlock
                    x:Name="emailErr"
                    FontSize="15"
                    Foreground="#f0a461"
                    TextAlignment="Left">
                </TextBlock>
                <PasswordBox
                    x:Name="password"
                    FontSize="25"
                    PlaceholderText="Password"
                    Foreground="DimGray"/>
                <TextBlock
                x:Name="passwordErr"
                FontSize="15"
                Foreground="#f0a461"
                TextAlignment="Left"
                ></TextBlock>
                <TextBox
                    Margin="0,10,0,0"
                    x:Name="address"
                    FontSize="25"
                    Foreground="DimGray"
                    PlaceholderText="Address"/>
                <TextBlock
                    x:Name="addressErr"
                    FontSize="15"
                    Foreground="#f0a461"
                    TextAlignment="Left">
                </TextBlock>
                <TextBox
                    Margin="0,10,0,0"
                    x:Name="phone"
                    FontSize="25"
                    Foreground="DimGray"
                    PlaceholderText="Phone Number"/>
                <TextBlock
                    x:Name="phoneErr"
                    FontSize="15"
                    Foreground="#f0a461"
                    TextAlignment="Left">
                </TextBlock>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Opacity="0.6"
                        Margin="0,10,0,0"
                        VerticalAlignment="Center"
                        FontSize="25"
                        Foreground="Black"
                    >Date of Birth</TextBlock>
                    <CalendarDatePicker
                        DateChanged="Birthday_OnDateChanged"
                        x:Name="birthDay"
                        Margin="20,3,0,0"
                        FontSize="25"
                    ></CalendarDatePicker>
                </StackPanel>
                <TextBlock
                    x:Name="birthdayErr"
                    FontSize="15"
                    Foreground="#f0a461"
                    TextAlignment="Left">
                </TextBlock>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Opacity="0.6"
                        Margin="0,10,20,20"
                        VerticalAlignment="Center"
                        FontSize="25"
                        Foreground="Black"
                    >Gender</TextBlock>
                    <RadioButton Checked="Gender_Choose" Margin="0,0,0,5" Opacity="0.7"  GroupName="gender" Tag="Male" IsChecked="True">Male</RadioButton>
                    <RadioButton Checked="Gender_Choose" Margin="0,0,0,5" Opacity="0.7"  GroupName="gender" Tag="Female" >Female</RadioButton>
                    <RadioButton Checked="Gender_Choose" Margin="0,0,0,5" Opacity="0.7"  GroupName="gender" Tag="Other">Other</RadioButton>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Opacity="0.6"
                        Margin="0,10,0,0"
                        VerticalAlignment="Center"
                        FontSize="25"
                        Foreground="Black"
                    >Avatar</TextBlock>
                    <Button Background="#f0a461"
                            Foreground="DimGray"
                            Margin="20,0,0,5"
                            FontSize="25" 
                            Click="TakePhoto">Capture</Button>
                </StackPanel>
                <Grid
                    Padding="0,0,0,0">
                    <Button
                        HorizontalAlignment="Center"
                        Click="Create_User"
                        Background="#f0a461"
                        Foreground="DimGray"
                        Margin="0,20,0,20"
                        FontSize="30" VerticalAlignment="Top">
                        Register Now
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
