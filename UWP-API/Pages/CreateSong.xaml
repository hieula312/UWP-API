<Page
    x:Class="UWP_API.Pages.CreateSong"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_API.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="main">
        <Grid.Background>
            <ImageBrush
                Stretch="UniformToFill"
                ScrollViewer.ZoomMode="Disabled"
                Opacity="0.8"
                ImageSource="/Assets/img/headphone3.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="3*">
            </RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
             Foreground="Black"
            Padding="0,00,0,0"
            FontSize="60">
            UPLOAD SONG
        </TextBlock>
        <Grid
            Grid.Row="1"
            Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="1"
                Orientation="Vertical">
                <TextBox
                    Margin="0,10,0,0"
                    x:Name="name"
                    FontSize="25"
                    Foreground="Black"
                    PlaceholderText="Name"/>
                <TextBlock
                    x:Name="nameErr"
                    FontSize="15"
                    Foreground="red"
                    TextAlignment="Left">
                </TextBlock>
                <TextBox
                    Margin="0,10,0,0"
                    x:Name="description"
					FontSize="25"
					Foreground="Black"
                    PlaceholderText="Description"/>
                <TextBlock
                    x:Name="desErr"
                    FontSize="15"
                    Foreground="red"
                    TextAlignment="Left">
                </TextBlock>
                <TextBox
                    Margin="0,10,0,0"
                    x:Name="signer"
                    FontSize="25"
                    Foreground="Black"
                    PlaceholderText="Singer"/>
                <TextBlock
                    x:Name="signerErr"
                    FontSize="15"
                    Foreground="red"
                    TextAlignment="Left">
                </TextBlock>
                <TextBox
                    Margin="0,10,0,0"
                    x:Name="author"
                    FontSize="25"
                    Foreground="Black"
                    PlaceholderText="Author"/>
                <TextBlock
                    x:Name="authorErr"
                    FontSize="15"
                    Foreground="red"
                    TextAlignment="Left">
                </TextBlock>
                <TextBox
                    Margin="0,10,0,0"
                    x:Name="thumbnail"
                    FontSize="25"
                    Foreground="Black"
                    PlaceholderText="Thumbnail"/>
                <TextBlock
                    x:Name="thumbnailErr"
                    FontSize="15"
                    Foreground="red"
                    TextAlignment="Left">
                </TextBlock>
                <TextBox
                    Margin="0,10,0,0"
                    x:Name="link"
                    FontSize="25"
                    Foreground="Black"
                    PlaceholderText="Link"/>
                <TextBlock
                    x:Name="linkErr"
                    FontSize="15"
                    Foreground="red"
                    TextAlignment="Left">
                </TextBlock>
                <Grid
                    Padding="0,0,0,0">
                    <Button
                        HorizontalAlignment="Center"
                        Grid.Column="0"
                        Background="Bisque"
                        Margin="0,20,0,0"
                        FontSize="30"
                        Click="UploadSong_Clicked">
                        Upload Song
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
